<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/rows_rounds_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rows_or_rounds"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/rows_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rows_radio_button_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rounds_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rows_rounds_title" />

        <RadioButton
            android:id="@+id/rounds_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rounds_radio_button_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rows_button"
            app:layout_constraintTop_toBottomOf="@+id/rows_rounds_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RadioGroup>
